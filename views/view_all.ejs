<%- include("./partials/header.ejs") %>
  <h1 style="font-size: 32px; font-family: 'Montserrat', sans-serif; font-weight: 700; margin-bottom: 5px; color: #070505; text-align: center;text-shadow: 0 2px 2px #534f4f">
    Welcome to Bloggera üìù
  </h1>
  <p style="font-size: 16px; color: #5c3d3d; text-align: center; margin-bottom: 20px; font-family: 'Roboto', sans-serif;">
    Enjoy hand-picked thoughts, stories, and ideas. Scroll through and dive into something interesting!
  </p>

<div class="outer">
   <% if (blogs.length === 0) { %>
    <p>No blogs added yet.</p>
  <% } else { %>
    <div class="scroll-wrapper">

      <div class="blog_container" id="blogScroll">
        <% for (var i = 0; i < blogs.length; i++) { %>
          <div class="blog_post">
            <h2 class="heading"><%= blogs[i].title %></h2>
            <p class="desc"><%= blogs[i].description %></p>
            <p class="desc">Posted on: <%= new Date(blogs[i].createdAt).toLocaleString() %></p>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>
</div>

<script>
  function scrollBlogs(direction) {
    const container = document.getElementById('blogScroll');
    const scrollAmount = 320; // Approx width of one blog_post including margin
    container.scrollBy({ left: direction * scrollAmount, behavior: 'smooth' });
  }
</script>

